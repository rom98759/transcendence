FROM node:20-alpine

WORKDIR /app

# Install Python and build tools needed for better-sqlite3
RUN apk add --no-cache python3 make g++ wget

# Copy package files and install ALL dependencies (including devDependencies)
COPY package.json package-lock.json ./
RUN npm install

# Copy tsconfig
COPY tsconfig.json ./

# Copy source code
COPY src ./src

# Verify files are copied (debugging)
RUN ls -la /app && ls -la /app/src

# Expose port
EXPOSE 3001

# Run with tsx watch
CMD ["npx", "tsx", "watch", "src/index.js"]
