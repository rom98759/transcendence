<div class="overflow-x-auto rounded-xl border border-gray-200 bg-white shadow-sm">
  <div class="border-b border-gray-200 px-6 py-4 bg-gray-50 text-gray-600 rounded-t-xl">
    <h2 class="text-lg font-semibold">Proof of tournament registration in the blockchain</h2>
  </div>
  <table class="min-w-full text-sm text-gray-700">
    <thead class="bg-gray-50 text-xs uppercase tracking-wide text-gray-500">
      <tr>
        <th class="px-4 py-3 text-left">Tournoi</th>
        <th class="px-4 py-3 text-left">Transaction</th>
        <th class="px-4 py-3 text-center">Bloc</th>
        <th class="px-4 py-3 text-center">Statut</th>
        <th class="px-4 py-3"></th>
      </tr>
    </thead>

    <tbody class="divide-y divide-gray-100">
      <% for (const row of snapshots) { %>
        <tr class="hover:bg-gray-50 transition">
          <td class="px-4 py-3 font-medium">
            #<%= row.tour_id %>
          </td>

          <td class="px-4 py-3 max-w-xs truncate font-mono text-xs text-gray-600">
            <%= row.tx_hash %>
          </td>

          <td class="px-4 py-3 text-center">
            <%= row.block_number ?? "-" %>
          </td>

          <td class="px-4 py-3 text-center">
            <% if (row.verify_status === 'OK') { %>
              <span class="inline-flex items-center gap-1 rounded-full bg-green-100 px-3 py-1 text-xs font-semibold text-green-700">
                ✔ OK
              </span>
            <% } else { %>
              <span class="inline-flex items-center gap-1 rounded-full bg-red-100 px-3 py-1 text-xs font-semibold text-red-700">
                ✖ Mismatch
              </span>
            <% } %>
          </td>

          <td class="px-4 py-3 text-right">
            <a
              href="/tournaments/<%= row.tour_id %>"
              class="text-blue-600 hover:text-blue-800 font-medium text-sm"
            >
              Détails →
            </a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

