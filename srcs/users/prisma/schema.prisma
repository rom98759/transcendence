generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
}

model UserProfile {
  id        Int      @id @default(autoincrement())
  authId    Int      @unique
  createdAt DateTime @default(now())
  email     String?  @unique
  username  String   @unique
  avatarUrl String?

  requestedFriendships Friendship[] @relation("requester")
  receivedFriendships  Friendship[] @relation("receiver")
}

model Friendship {
  id                    Int      @id @default(autoincrement())
  createdAt             DateTime @default(now())
  nicknameRequester     String?
  nicknameReceiver      String?
  status                String
  
  requesterId           Int
  requester             UserProfile @relation("requester", fields: [requesterId], references: [id], onDelete: Cascade)

  receiverId            Int
  receiver              UserProfile @relation("receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  
  @@unique([requesterId, receiverId])
}